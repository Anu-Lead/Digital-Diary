<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your memories</p>

{{#if memories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Event Title</th>
                <th>Date && Time</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each memories}}
                <tr>
                    <td><a href="/memories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/memories/edit/{{_id}}" class="btn btn-float">
                            <i class="fa fa-edit"></i>
                        </a>

                        <form action="/memories/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>

            {{/each}}
        </tbody>
    </table>

{{else}}
<p>No Memories in Your Diary, Create One Now</p>
{{/if}}